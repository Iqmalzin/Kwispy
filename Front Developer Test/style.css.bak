*{
    margin: 0;
    padding: 0;
    font-family: 'Montserrat', sans-serif;
}
.header{
    min-height: 20em;
    min-width:  1140px;
    background: #00afef;
    color: #000;
    position: relative;
}
nav{
	display: flex;
	justify-content: space-between;
	align-items: center;
	position: relative;
}
.nav-links{
	text-align: center;
	width: 100%;
   	height: 100%;
	background:#fff;
   	display: block;
   	margin: 0;
}
.nav-links ul li{
	
	list-style: none;
	display:inline-block;
	padding:10px 25px;
	cursor: pointer;
}
.nav-links ul  {
	
	color: #000;
	text-decoration: none;
	font-size: 18px;
	cursor: pointer;
	position: relative;
	
}

#dropdown {
	
	display: none;
	text-align: center;
	position: absolute;
	width: 40%;
	height: 100%;
	background-color: #fff;
	top: 130px;
	z-index: 999;
	left: 45%;
	border: 5px;
	border-color: #000;
}

#menu.active{
	border-bottom:4px solid;
	border-bottom-color: #00afef;
	z-index: 999;
}

#dropdown li{
	
	padding:20px 30px;
}

#dropdown.active{
	
	display: block;
}
.verticalLine {
  border-right: solid #000;
  float: right;
  height: 40%;
  width: 80%
}
.verticalLine2 {
  border-right: solid #000;
  float: right;
  height: 40%;
  width: 150%
}